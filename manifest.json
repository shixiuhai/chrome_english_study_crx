{
  "manifest_version": 3,
  "name": "英语单词学习助手",
  "version": "1.0",
  "description": "点击网页英文单词进行翻译和记录",
  "permissions": ["storage", "activeTab", "notifications"],
  "host_permissions": ["https://60s.viki.moe/", "https://api.dictionaryapi.dev/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/image_16.png",
      "48": "icons/image_48.png",
      "128": "icons/image_128.png"
    }
  },
  "icons": {
    "16": "icons/image_16.png",
    "48": "icons/image_48.png",
    "128": "icons/image_128.png"
  }
}